{
    "name": "jenky/atlas-pool",
    "description": "Send concurrent requests for Atlas",
    "keywords": [
        "jenky",
        "atlas",
        "pool",
        "concurrent-requests",
        "parallel-requests",
        "async",
        "await"
    ],
    "homepage": "https://github.com/jenky/atlas-pool",
    "license": "MIT",
    "authors": [
        {
            "name": "Lynh",
            "email": "contact@lynh.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "jenky/atlas": "^0.5",
        "jenky/concurrency": "1.x-dev"
    },
    "require-dev": {
        "azjezz/psl": "^2.7",
        "clue/mq-react": "^1.5",
        "friendsofphp/php-cs-fixer": "^3.15",
        "guzzlehttp/guzzle": "^7.5",
        "jenky/atlas-mock-client": "^1.0",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.0",
        "react/async": "^4.1",
        "react/http": "^1.9",
        "symfony/http-client": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "Jenky\\Atlas\\Pool\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jenky\\Atlas\\Pool\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": [
            "vendor/bin/phpstan analyse"
        ],
        "cs": [
            "vendor/bin/php-cs-fixer fix"
        ],
        "test": [
            "vendor/bin/phpunit"
        ],
        "coverage": [
            "vendor/bin/phpunit --coverage"
        ],
        "check": [
            "@cs --dry-run",
            "@analyse",
            "@test"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
